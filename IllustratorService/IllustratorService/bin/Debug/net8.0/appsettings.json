{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=illustrators_db;Username=postgres;Password=postgres"
  },
  "AuthService": {
    "https": null, //localhost:7088
    "BaseUrl": "https://localhost:7088"
    //  "BaseUrl": "http://auth-service:5001"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
